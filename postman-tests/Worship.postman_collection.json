{
  "info": {
    "_postman_id": "worship-collection-id",
    "name": "AskBudda - Worship",
    "description": "上香模块的 API 测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "获取上香素材",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/worship/materials",
          "host": ["{{baseUrl}}"],
          "path": ["worship", "materials"],
          "query": [
            {
              "key": "type",
              "value": "image",
              "disabled": true
            },
            {
              "key": "subType",
              "value": "buddha",
              "disabled": true
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"获取上香素材成功状态码是 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"响应包含正确的数据结构\", function () {",
              "    const responseData = pm.response.json();",
              "    pm.expect(responseData.code).to.equal(0);",
              "    pm.expect(responseData.data).to.have.property('items');",
              "    pm.expect(responseData.data.items).to.be.an('array');",
              "});",
              "",
              "pm.test(\"素材列表项包含所需字段并保存ID\", function () {",
              "    const responseData = pm.response.json();",
              "    const items = responseData.data.items;",
              "",
              "    // 遍历所有素材，根据 subType 保存对应的 ID",
              "    items.forEach(item => {",
              "        pm.expect(item).to.have.property('id');",
              "        pm.expect(item).to.have.property('title');",
              "        pm.expect(item).to.have.property('description');",
              "        pm.expect(item).to.have.property('type');",
              "        pm.expect(item).to.have.property('url');",
              "        pm.expect(item).to.have.property('subType');",
              "",
              "        // 根据 subType 保存不同的环境变量",
              "        if (item.subType === 'buddha' && !pm.environment.get('worshipBuddaId')) {",
              "            pm.environment.set('worshipBuddaId', item.id);",
              "        }",
              "        if (item.subType === 'incense_burner' && !pm.environment.get('worshipBurnerId')) {",
              "            pm.environment.set('worshipBurnerId', item.id);",
              "        }",
              "        if (item.subType === 'incense' && !pm.environment.get('worshipIncenseId')) {",
              "            pm.environment.set('worshipIncenseId', item.id);",
              "        }",
              "    });",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "创建上香记录",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/worship/record",
          "host": ["{{baseUrl}}"],
          "path": ["worship", "record"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"buddhaId\": \"{{worshipBuddaId}}\",\n    \"materials\": [\"{{worshipBurnerId}}\", \"{{worshipIncenseId}}\"],\n    \"wish\": \"test wish\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"创建上香记录成功状态码是 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"响应包含正确的数据结构\", function () {",
              "    const responseData = pm.response.json();",
              "    pm.expect(responseData.code).to.equal(0);",
              "    pm.expect(responseData.data).to.have.property('id');",
              "    pm.expect(responseData.data).to.have.property('buddhaId');",
              "    pm.expect(responseData.data).to.have.property('buddha');",
              "    pm.expect(responseData.data).to.have.property('materials');",
              "    pm.expect(responseData.data).to.have.property('wish');",
              "    pm.expect(responseData.data).to.have.property('created_at');",
              "",
              "    // 验证佛像信息",
              "    const buddha = responseData.data.buddha;",
              "    pm.expect(buddha).to.have.property('id');",
              "    pm.expect(buddha).to.have.property('title');",
              "    pm.expect(buddha).to.have.property('url');",
              "",
              "    // 验证素材信息",
              "    const materials = responseData.data.materials;",
              "    pm.expect(materials).to.be.an('array');",
              "    materials.forEach(material => {",
              "        pm.expect(material).to.have.property('id');",
              "        pm.expect(material).to.have.property('title');",
              "        pm.expect(material).to.have.property('type');",
              "        pm.expect(material).to.have.property('url');",
              "    });",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "获取上香记录列表",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/worship/records?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["worship", "records"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"获取上香记录列表成功状态码是 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"响应包含正确的数据结构\", function () {",
              "    const responseData = pm.response.json();",
              "    pm.expect(responseData.code).to.equal(0);",
              "    pm.expect(responseData.data).to.have.property('items');",
              "    pm.expect(responseData.data).to.have.property('total');",
              "    pm.expect(responseData.data.items).to.be.an('array');",
              "});",
              "",
              "pm.test(\"上香记录包含正确的佛像ID\", function () {",
              "    const responseData = pm.response.json();",
              "    if (responseData.data.items.length > 0) {",
              "        const firstRecord = responseData.data.items[0];",
              "        pm.expect(firstRecord).to.have.property('buddha');",
              "        pm.expect(firstRecord.buddha).to.have.property('id');",
              "        pm.expect(firstRecord.buddha.id).to.equal(pm.environment.get('worshipBuddaId'));",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "获取佛像排行榜",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/worship/ranking?limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["worship", "ranking"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"获取排行榜成功状态码是 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"响应包含正确的数据结构\", function () {",
              "    const responseData = pm.response.json();",
              "    pm.expect(responseData.code).to.equal(0);",
              "    pm.expect(responseData.data).to.have.property('items');",
              "    pm.expect(responseData.data.items).to.be.an('array');",
              "});",
              "",
              "pm.test(\"排行榜项包含所需字段\", function () {",
              "    const responseData = pm.response.json();",
              "    if (responseData.data.items.length > 0) {",
              "        const firstItem = responseData.data.items[0];",
              "        pm.expect(firstItem).to.have.property('id');",
              "        pm.expect(firstItem).to.have.property('title');",
              "        pm.expect(firstItem).to.have.property('description');",
              "        pm.expect(firstItem).to.have.property('url');",
              "        pm.expect(firstItem).to.have.property('worshipCount');",
              "",
              "        // 验证第一名是否是我们刚刚上香的佛像",
              "        if (pm.environment.get('worshipBuddaId')) {",
              "            pm.expect(firstItem.id).to.equal(pm.environment.get('worshipBuddaId'));",
              "        }",
              "    }",
              "});"
            ]
          }
        }
      ]
    }
  ]
} 