{
    "info": {
        "name": "AskBudda - User",
        "description": "用户管理模块的 API 测试集合",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "创建用户",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"newuser\",\n    \"password\": \"NewUser@123\",\n    \"email\": \"newuser@example.com\",\n    \"phone\": \"13800138000\",\n    \"nickname\": \"新用户\",\n    \"avatar\": \"https://example.com/avatar.jpg\",\n    \"bio\": \"这是一个新用户的简介\",\n    \"roles\": [\"{{roleId}}\"]\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/users",
                    "host": ["{{baseUrl}}"],
                    "path": ["users"]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test(\"创建用户成功状态码是 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"响应包含正确的用户信息\", function () {",
                            "    const responseData = pm.response.json();",
                            "    pm.expect(responseData.code).to.equal(0);",
                            "    pm.expect(responseData.data).to.have.property('user');",
                            "    const user = responseData.data.user;",
                            "    pm.expect(user).to.have.property('id');",
                            "    pm.expect(user).to.have.property('username');",
                            "    pm.expect(user).to.have.property('email');",
                            "    pm.expect(user).to.have.property('phone');",
                            "    pm.expect(user).to.have.property('nickname');",
                            "    pm.expect(user).to.have.property('avatar');",
                            "    pm.expect(user).to.have.property('bio');",
                            "    pm.expect(user).to.have.property('status');",
                            "    pm.expect(user).to.have.property('is_active');",
                            "    pm.expect(user).to.have.property('created_at');",
                            "    pm.expect(user).to.have.property('updated_at');",
                            "",
                            "    // 保存新创建的用户ID用于后续测试",
                            "    if (user.id) {",
                            "        pm.environment.set('newUserId', user.id);",
                            "    }",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "更新用户",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"updated@example.com\",\n    \"phone\": \"13900139000\",\n    \"nickname\": \"已更新用户\",\n    \"avatar\": \"https://example.com/updated-avatar.jpg\",\n    \"bio\": \"这是已更新的用户简介\",\n    \"status\": \"ACTIVE\",\n    \"is_active\": true,\n    \"roles\": [\"{{roleId}}\"]\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/users/{{newUserId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["users", "{{newUserId}}"]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test(\"更新用户成功状态码是 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"响应包含正确的更新后用户信息\", function () {",
                            "    const responseData = pm.response.json();",
                            "    pm.expect(responseData.code).to.equal(0);",
                            "    pm.expect(responseData.data).to.have.property('user');",
                            "    const user = responseData.data.user;",
                            "    pm.expect(user).to.have.property('id');",
                            "    pm.expect(user).to.have.property('username');",
                            "    pm.expect(user).to.have.property('email');",
                            "    pm.expect(user.email).to.equal('updated@example.com');",
                            "    pm.expect(user).to.have.property('phone');",
                            "    pm.expect(user.phone).to.equal('13900139000');",
                            "    pm.expect(user).to.have.property('nickname');",
                            "    pm.expect(user.nickname).to.equal('已更新用户');",
                            "    pm.expect(user).to.have.property('bio');",
                            "    pm.expect(user.bio).to.equal('这是已更新的用户简介');",
                            "    pm.expect(user).to.have.property('status');",
                            "    pm.expect(user.status).to.equal('ACTIVE');",
                            "    pm.expect(user).to.have.property('is_active');",
                            "    pm.expect(user.is_active).to.equal(true);",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "获取单个用户",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/users/{{newUserId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["users", "{{newUserId}}"]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test(\"获取用户信息成功状态码是 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"响应包含完整的用户信息\", function () {",
                            "    const responseData = pm.response.json();",
                            "    pm.expect(responseData.code).to.equal(0);",
                            "    pm.expect(responseData.data).to.have.property('user');",
                            "",
                            "    const user = responseData.data.user;",
                            "    pm.expect(user).to.have.property('id');",
                            "    pm.expect(user.id).to.equal(pm.environment.get('newUserId'));",
                            "    pm.expect(user).to.have.property('username');",
                            "    pm.expect(user).to.have.property('email');",
                            "    pm.expect(user).to.have.property('phone');",
                            "    pm.expect(user).to.have.property('nickname');",
                            "    pm.expect(user).to.have.property('avatar');",
                            "    pm.expect(user).to.have.property('bio');",
                            "    pm.expect(user).to.have.property('status');",
                            "    pm.expect(user).to.have.property('is_active');",
                            "    pm.expect(user).to.have.property('created_at');",
                            "    pm.expect(user).to.have.property('updated_at');",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "获取用户列表",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/users?page=1&limit=10&status=ACTIVE",
                    "host": ["{{baseUrl}}"],
                    "path": ["users"],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        },
                        {
                            "key": "status",
                            "value": "ACTIVE"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test(\"获取用户列表成功状态码是 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"响应包含用户列表和分页信息\", function () {",
                            "    const responseData = pm.response.json();",
                            "    pm.expect(responseData.code).to.equal(0);",
                            "    pm.expect(responseData.data).to.have.property('users');",
                            "    pm.expect(responseData.data).to.have.property('pagination');",
                            "",
                            "    const users = responseData.data.users;",
                            "    pm.expect(users).to.be.an('array');",
                            "    if (users.length > 0) {",
                            "        const user = users[0];",
                            "        pm.expect(user).to.have.property('id');",
                            "        pm.expect(user).to.have.property('username');",
                            "        pm.expect(user).to.have.property('email');",
                            "        pm.expect(user).to.have.property('status');",
                            "        pm.expect(user).to.have.property('is_active');",
                            "    }",
                            "",
                            "    const pagination = responseData.data.pagination;",
                            "    pm.expect(pagination).to.have.property('total');",
                            "    pm.expect(pagination).to.have.property('page');",
                            "    pm.expect(pagination).to.have.property('limit');",
                            "    pm.expect(pagination).to.have.property('totalPages');",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "搜索用户",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/users?username=updated&email=example.com&page=1&limit=10",
                    "host": ["{{baseUrl}}"],
                    "path": ["users"],
                    "query": [
                        {
                            "key": "username",
                            "value": "updated"
                        },
                        {
                            "key": "email",
                            "value": "example.com"
                        },
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        }
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test(\"搜索用户成功状态码是 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"响应包含搜索结果和分页信息\", function () {",
                            "    const responseData = pm.response.json();",
                            "    pm.expect(responseData.code).to.equal(0);",
                            "    pm.expect(responseData.data).to.have.property('users');",
                            "    pm.expect(responseData.data).to.have.property('pagination');",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "删除用户",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/users/{{newUserId}}",
                    "host": ["{{baseUrl}}"],
                    "path": ["users", "{{newUserId}}"]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "type": "text/javascript",
                        "exec": [
                            "pm.test(\"删除用户成功状态码是 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"响应包含成功信息\", function () {",
                            "    const responseData = pm.response.json();",
                            "    pm.expect(responseData.code).to.equal(0);",
                            "    pm.expect(responseData.message).to.include('成功');",
                            "});"
                        ]
                    }
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [""]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "pm.test(\"状态码是 200\", function () {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"响应包含正确的结构\", function () {",
                    "    const responseData = pm.response.json();",
                    "    pm.expect(responseData).to.have.property('code');",
                    "    pm.expect(responseData).to.have.property('message');",
                    "    pm.expect(responseData).to.have.property('data');",
                    "});"
                ]
            }
        }
    ]
} 