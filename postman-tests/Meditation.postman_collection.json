{
  "info": {
    "_postman_id": "meditation-collection-id",
    "name": "AskBudda - Meditation",
    "description": "冥想模块的 API 测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "获取冥想素材列表",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/meditation/materials?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["meditation", "materials"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "type",
              "value": "audio",
              "disabled": true
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"获取冥想素材成功状态码是 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"响应包含正确的数据结构\", function () {",
              "    const responseData = pm.response.json();",
              "    pm.expect(responseData.code).to.equal(0);",
              "    pm.expect(responseData.data).to.have.property('total');",
              "    pm.expect(responseData.data).to.have.property('items');",
              "    pm.expect(responseData.data.items).to.be.an('array');",
              "});",
              "",
              "pm.test(\"素材列表项包含所需字段\", function () {",
              "    const responseData = pm.response.json();",
              "    if (responseData.data.items.length > 0) {",
              "        const firstItem = responseData.data.items[0];",
              "        pm.expect(firstItem).to.have.property('id');",
              "        pm.expect(firstItem).to.have.property('title');",
              "        pm.expect(firstItem).to.have.property('description');",
              "        pm.expect(firstItem).to.have.property('type');",
              "        pm.expect(firstItem).to.have.property('url');",
              "        pm.expect(firstItem).to.have.property('duration');",
              "",
              "        // 保存第一个图片和音频素材的 ID",
              "        responseData.data.items.forEach(item => {",
              "            if (item.type === 'image' && !pm.environment.get('meditationImageId')) {",
              "                pm.environment.set('meditationImageId', item.id);",
              "            }",
              "            if (item.type === 'audio' && !pm.environment.get('meditationAudioId')) {",
              "                pm.environment.set('meditationAudioId', item.id);",
              "            }",
              "        });",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "开始冥想",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"materials\": [\"{{meditationImageId}}\", \"{{meditationAudioId}}\"],\n  \"duration\": {{meditationDuration}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/meditation/start",
          "host": ["{{baseUrl}}"],
          "path": ["meditation", "start"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"开始冥想成功状态码是 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"响应包含正确的数据结构\", function () {",
              "    const responseData = pm.response.json();",
              "    pm.expect(responseData.code).to.equal(0);",
              "    pm.expect(responseData.data).to.have.property('id');",
              "    pm.expect(responseData.data).to.have.property('startTime');",
              "    pm.expect(responseData.data).to.have.property('materials');",
              "",
              "    // 保存冥想记录 ID",
              "    if (responseData.data.id) {",
              "        pm.environment.set('meditationId', responseData.data.id);",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "结束冥想",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"{{meditationId}}\",\n  \"status\": \"completed\",\n  \"duration\": {{meditationDuration}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/meditation/end",
          "host": ["{{baseUrl}}"],
          "path": ["meditation", "end"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"结束冥想成功状态码是 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"响应包含正确的数据结构\", function () {",
              "    const responseData = pm.response.json();",
              "    pm.expect(responseData.code).to.equal(0);",
              "    pm.expect(responseData.data).to.have.property('id');",
              "    pm.expect(responseData.data).to.have.property('status');",
              "    pm.expect(responseData.data).to.have.property('duration');",
              "    pm.expect(responseData.data).to.have.property('startTime');",
              "    pm.expect(responseData.data).to.have.property('endTime');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "获取冥想记录",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/meditation/records?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["meditation", "records"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "status",
              "value": "completed",
              "disabled": true
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"获取冥想记录成功状态码是 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"响应包含正确的数据结构\", function () {",
              "    const responseData = pm.response.json();",
              "    pm.expect(responseData.code).to.equal(0);",
              "    pm.expect(responseData.data).to.have.property('total');",
              "    pm.expect(responseData.data).to.have.property('items');",
              "    pm.expect(responseData.data.items).to.be.an('array');",
              "});",
              "",
              "pm.test(\"记录包含正确的冥想ID\", function () {",
              "    const responseData = pm.response.json();",
              "    if (responseData.data.items.length > 0) {",
              "        const firstRecord = responseData.data.items[0];",
              "        pm.expect(firstRecord.id).to.equal(pm.environment.get('meditationId'));",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "获取进行中的冥想",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/meditation/ongoing",
          "host": ["{{baseUrl}}"],
          "path": ["meditation", "ongoing"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"获取进行中的冥想成功状态码是 0\", function () {",
              "    pm.response.to.have.status(0);",
              "});",
              "",
              "pm.test(\"响应包含正确的数据结构\", function () {",
              "    const responseData = pm.response.json();",
              "    pm.expect(responseData.code).to.equal(0);",
              "    if (responseData.data) {",
              "        pm.expect(responseData.data).to.have.property('id');",
              "        pm.expect(responseData.data).to.have.property('startTime');",
              "        pm.expect(responseData.data).to.have.property('materials');",
              "    }",
              "});"
            ]
          }
        }
      ]
    }
  ]
} 